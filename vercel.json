{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@now/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/categories/(.*)",
        "dest": "index.js"
      },
      {
        "src": "/questions/(.*)",
        "dest": "index.js"
      },
        {
            "src": "/questions",
            "dest": "index.js"
        },
        {
            "src": "/",
            "dest": "public/index.html"
        },
        {
            "src": "/(.+)",
            "dest": "/public/$1"
        }
    ]
  }